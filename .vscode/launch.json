    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/met_api",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
          "name": "Python: Debug Unit Tests",
          "type": "python",
          "request": "launch",
          "purpose": ["debug-test"],
          "console": "integratedTerminal",
          "justMyCode": false
        }
    ]
}