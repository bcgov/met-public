							"});\r",
							"\r",
							"pm.test('should return JSON', function () {\r",
							"    pm.response.to.have.header('Content-Type', 'application/json');\r",
							"});\r",
							"\r",
							"pm.test(\"Validate Comment List Data\", () => {\r",
							"    var jsonData = pm.response.json().result;\r",
							"    console.log(jsonData);\r",
